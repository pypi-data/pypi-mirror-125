<tool id="regist_visualize_reg_images" name="regist_visualize_reg_images" version="0.0.1" profile="21.09">

    <description>check tiff_reg file names</description>

    <requirements>
        <requirement type="package">jinxif</requirement>
    </requirements>

    <command detect_errors="exit_code"><![CDATA[
        mkdir input &&
        mkdir output &&

        #for $tiff in $tiff_reg:
            ln -s $tiff input/ &&
	#end for

	python $__tool_directory__/mpleximage_04_6_regist_visualize_reg_images_slidepxscene.py $color
    ]]></command>

    <inputs>
        <param name="color" type="text" value="c1" label="color_channel_input"/>
        <param name="tiff_reg" type="data_collection" format="tiff" collection_type="list"  label="tiff_reg_files_input"/>
    </inputs>

    <outputs>
        <collection type="list"  name="regist_visualize_reg_images_output">
            <discover_datasets pattern="__designation_and_ext__" directory="output" format="png" visible="false"/>
        </collection>
    </outputs>

    <help>the beatles ~ help!</help>
</tool>
