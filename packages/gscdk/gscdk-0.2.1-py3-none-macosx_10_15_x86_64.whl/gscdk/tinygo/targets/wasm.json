{
	"llvm-target":   "wasm32--wasi",
	"build-tags":    ["tinygo.wasm"],
	"goos":          "js",
	"goarch":        "wasm",
	"linker":        "wasm-ld",
	"libc":          "wasi-libc",
	"cflags": [
		"--target=wasm32--wasi",
		"--sysroot={root}/lib/wasi-libc/sysroot",
		"-Oz"
	],
	"ldflags": [
		"--allow-undefined",
		"--stack-first",
		"--no-demangle"
	],
	"emulator":      ["node", "targets/wasm_exec.js"],
	"wasm-abi":      "js"
}
